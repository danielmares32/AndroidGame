<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gameActivity"
    android:orientation="horizontal"
    android:background="@drawable/tablero">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">


            <Button
                android:backgroundTint="@color/azul"
                android:layout_marginHorizontal="15dp"
                android:id="@+id/sal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salir" />

            <Button
                android:id="@+id/adivinar"
                android:backgroundTint="@color/azul"
                android:layout_marginHorizontal="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adivinar Personaje" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Personaje"
        android:padding="15dp">
        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>

    <LinearLayout
        android:background="@color/azul"
        android:paddingTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:textColor="@color/white"
            android:layout_margin="5dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginVertical="5dp"
            android:background="@color/red"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Categoría de Pregunta"/>

        <Spinner
            android:layout_marginVertical="5dp"
            android:background="@color/azul"
            android:id="@+id/Categorias"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textAlignment="center" />

        <TextView
            android:textColor="@color/white"
            android:layout_margin="5dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginVertical="5dp"
            android:background="@color/red"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Preguntas de la Categoría"/>

        <Spinner
            android:layout_marginVertical="5dp"
            android:background="@color/azul"
            android:id="@+id/Juego"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <Spinner
            android:layout_marginVertical="5dp"
            android:background="@color/azul"
            android:id="@+id/genero"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <Spinner
            android:layout_marginVertical="5dp"
            android:background="@color/azul"
            android:id="@+id/rol"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <Spinner
            android:layout_marginVertical="5dp"
            android:background="@color/azul"
            android:id="@+id/letra_nombre"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <Spinner
            android:layout_marginVertical="5dp"
            android:background="@color/azul"
            android:id="@+id/color_cabello"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <Spinner
            android:layout_marginVertical="5dp"
            android:background="@color/azul"
            android:id="@+id/tipo_cabello"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <Spinner
            android:layout_marginVertical="5dp"
            android:background="@color/azul"
            android:id="@+id/color_piel"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

        <Spinner
            android:layout_marginVertical="5dp"
            android:background="@color/azul"
            android:id="@+id/vestimenta"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <Spinner
            android:layout_marginVertical="5dp"
            android:background="@color/azul"
            android:id="@+id/nombre"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <Spinner
            android:layout_marginVertical="5dp"
            android:background="@color/azul"
            android:id="@+id/accesorio"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

        <Button
            android:layout_margin="5dp"
            android:text="Preguntame"
            android:layout_marginVertical="5dp"
            android:backgroundTint="@color/red"
            android:id="@+id/btnPreguntar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/respuesta"
            android:textColor="@color/white"
            android:layout_margin="5dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginVertical="15dp"
            android:background="@color/red"
            android:textSize="24sp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Respuesta"/>


    </LinearLayout>

</LinearLayout>
