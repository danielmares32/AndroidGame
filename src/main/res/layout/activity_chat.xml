<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatActivity"
    android:background="@drawable/fondo_chat">


    <TextView
        android:id="@+id/lblPalyerName"
        android:padding="19dp"
        android:textSize="15dp"
        android:background="@color/azul"
        android:textColorHint="@color/black"
        android:hint="@string/hintNombreP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerChat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/txtmensaje"
        android:layout_below="@+id/lblPalyerName" />

    <EditText
        android:id="@+id/txtmensaje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="10dp"
        android:layout_toStartOf="@+id/lblSend"
        android:background="@drawable/edit_text_design"
        android:hint="@string/hintP"
        android:padding="9dp"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/lblSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:background="@color/send"
        android:padding="9dp"
        android:text="@string/enviar"
        android:textColor="@color/primaryColor"
        android:textSize="15dp"
        android:textStyle="bold" />

</RelativeLayout>